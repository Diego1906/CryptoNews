<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleCardView">
        <item name="cardCornerRadius">@dimen/dimen_8dp</item>
        <item name="cardElevation">@dimen/dimen_6dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/dimen_6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleTextTitle">
        <item name="android:gravity">start</item>
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleIncludeView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1dp</item>
    </style>

    <style name="StyleIncludeViewWithMarginTop" parent="StyleIncludeView">
        <item name="android:layout_marginTop">@dimen/dimen_6dp</item>
    </style>

    <style name="StyleTextDate">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="StyleImage">
        <item name="android:layout_marginTop">@dimen/dimen_6dp</item>
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>
