<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue900</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue900</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleCardView">
        <item name="cardCornerRadius">@dimen/dimen_8dp</item>
        <item name="cardElevation">@dimen/dimen_6dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/dimen_6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="StyleTextTitle">
        <item name="android:gravity">start</item>
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

    <style name="StyleIncludeView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1dp</item>
    </style>

    <style name="StyleIncludeViewWithMarginTop" parent="StyleIncludeView">
        <item name="android:layout_marginTop">@dimen/dimen_6dp</item>
    </style>

    <style name="StyleTextDate">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:textColor">@color/colorGray700</item>
    </style>

    <style name="StyleImage">
        <item name="android:layout_marginTop">@dimen/dimen_6dp</item>
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Tema do projeto -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <!-- Nav Drawer -->
    <style name="AppTheme.NavDrawer" parent="BaseAppTheme" />

    <!-- Temas para a Toolbar, ver include_toolbar.xml -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
