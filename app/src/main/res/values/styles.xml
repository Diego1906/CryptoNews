<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue900</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue900</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleTextView">
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="StyleTitle" parent="StyleTextView">
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
    </style>

    <style name="StyleDescription" parent="StyleTextView">
        <item name="android:maxLines">5</item>
        <item name="android:textColor">@color/colorGray700</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

</resources>
