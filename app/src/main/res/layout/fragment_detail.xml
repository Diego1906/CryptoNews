<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="br.com.cryptonews.viewmodel.DetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="@dimen/dimen_8dp"
            card_view:cardElevation="@dimen/dimen_6dp"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="@dimen/dimen_8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="br.com.cryptonews.ui.DetailFragment">

                <TextView
                    android:id="@+id/labelTitleDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@string/title"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="italic|bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewTitleDetail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelTitleDetail" />

                <TextView
                    android:id="@+id/textTitleDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="2"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@{viewModel.article.title}"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="@id/labelTitleDetail"
                    app:layout_constraintStart_toStartOf="@id/labelTitleDetail"
                    app:layout_constraintTop_toBottomOf="@id/viewTitleDetail"
                    tools:text="As moedas digitais estão sacudinho o mundo e o mercado de compra e venda." />

                <TextView
                    android:id="@+id/labelDateDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:gravity="start"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@string/date"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="italic|bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textTitleDetail" />

                <View
                    android:id="@+id/viewDateDetail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelDateDetail" />

                <TextView
                    android:id="@+id/textDateDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@{viewModel.article.publishedAt}"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewDateDetail"
                    tools:text="10/03/2020" />

                <ImageView
                    android:id="@+id/imageDetail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_250dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:contentDescription="@string/image_news_detail"
                    android:scaleType="centerCrop"
                    app:downloadImage="@{viewModel.article.urlToImage}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textDateDetail"
                    tools:srcCompat="@drawable/ic_news" />

                <TextView
                    android:id="@+id/labelDescriptionDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:gravity="start"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@string/description"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="italic|bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageDetail" />

                <View
                    android:id="@+id/viewDescriptionDetail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelDescriptionDetail" />

                <TextView
                    android:id="@+id/textDescriptionDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="5"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@{viewModel.article.description}"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewDescriptionDetail"
                    tools:text="As moedas digitais estão sacudinho o mundo e o mercado de compra e venda." />

                <TextView
                    android:id="@+id/labelAuthorDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:gravity="start"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@string/author"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="italic|bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textDescriptionDetail" />

                <View
                    android:id="@+id/viewAuthorDetail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelAuthorDetail" />

                <TextView
                    android:id="@+id/textAuthorDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@{viewModel.article.author}"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewAuthorDetail"
                    tools:text="Autor desconhecido" />

                <Button
                    android:id="@+id/buttonLearnMore"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_64dp"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:text="@string/learn_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textAuthorDetail" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>
</layout>
