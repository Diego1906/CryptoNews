<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="article"
            type="br.com.cryptonews.entities.Article" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/dimen_6dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="@dimen/dimen_8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageNews"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_160dp"
                android:scaleType="centerCrop"
                app:downloadImage="@{article.urlToImage}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/labelDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/dimen_4dp"
                android:text="@string/date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="italic|bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/imageNews"
                app:layout_constraintTop_toBottomOf="@id/imageNews" />

            <View
                android:id="@+id/viewDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelDate" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/dimen_4dp"
                android:text="@{article.publishedAt}"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/labelDate"
                app:layout_constraintTop_toBottomOf="@id/viewDate"
                tools:text="10/03/2020" />

            <TextView
                android:id="@+id/labelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/dimen_4dp"
                android:text="@string/title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="italic|bold"
                app:layout_constraintEnd_toEndOf="@id/textDate"
                app:layout_constraintStart_toStartOf="@id/textDate"
                app:layout_constraintTop_toBottomOf="@id/textDate" />

            <View
                android:id="@+id/viewTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelTitle" />

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:padding="@dimen/dimen_4dp"
                android:text="@{article.title}"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/labelTitle"
                app:layout_constraintStart_toStartOf="@id/labelTitle"
                app:layout_constraintTop_toBottomOf="@id/viewTitle"
                tools:text="As moedas digitais estÃ£o sacudinho o mundo e o mercado de compra e venda." />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>